<layout>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="20dp"
     android:orientation="vertical"
     tools:context="com.example.jibunnisa.alfaklassify.Fragments.MyProfileFragment">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:padding="10dp"
      android:id="@+id/profile_picture"
      android:src="@drawable/acount_icon"/>
  <TextView
      android:layout_marginTop="10dp"
      android:textSize="22sp"
      android:id="@+id/nameTV"
      android:textColor="@android:color/background_dark"
      android:layout_width="match_parent"
      android:text="Sorwar Hosen Mostafa"
      android:layout_height="wrap_content" />
  <TextView
      android:textSize="15sp"
      android:layout_marginTop="3dp"
      android:id="@+id/addressTV"
      android:text="Mirpur,Dhaka"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <TextView
      android:textSize="15sp"
      android:id="@+id/phoneTV"
      android:text="01628548585"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <TextView
      android:textSize="15sp"
      android:id="@+id/emailTV"
      android:text="mostafasarwar21@gmail.com"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <Button
      android:layout_marginTop="15dp"
      android:id="@+id/updatebtn"
      android:textSize="15sp"
      android:background="@drawable/border_button"
      android:layout_width="match_parent"
      android:textColor="@android:color/white"
      android:textStyle="bold"
      android:layout_height="wrap_content"
      android:text="Update"/>
  <Button
      android:id="@+id/signoutbtn"
      android:layout_marginTop="10dp"
      android:textColor="@android:color/white"
      android:textStyle="bold"
      android:textSize="15sp"
      android:background="@drawable/border_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sign Out"/>


 </LinearLayout>

</layout>